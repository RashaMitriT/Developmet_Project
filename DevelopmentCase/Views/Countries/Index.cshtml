@model IEnumerable<DevelopmentCase.Models.Country>

@{
    ViewData["Title"] = "Index";

}

<h2>Index</h2>

<p>
    <a asp-action="Create">Create New</a>
</p>
<form asp-action="Create">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="form-group">
        <label id="name" class="control-label"></label>
        <select id="countrylist" class="form-control"
                asp-items="@(new SelectList(@ViewBag.listofcountries,"ID","name"))">
            <option> Select Country Name</option>

        </select>
        
      
    </div>
    <div class="form-group">
        <input type="submit" value="Create" class="btn btn-default" />
    </div>
</form>
